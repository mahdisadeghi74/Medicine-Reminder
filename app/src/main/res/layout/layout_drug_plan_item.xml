<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_cornered_bg"
    android:backgroundTint="?attr/colorMyAccent"
    android:layout_marginTop="@dimen/screenSmallMargin"
    android:layout_marginBottom="@dimen/screenSmallMargin"
    android:layout_marginStart="@dimen/screenNormalMargin"
    android:layout_marginEnd="@dimen/screenNormalMargin"
    android:id="@+id/cnlMain"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="kodein"
        android:textColor="@color/colorSoftWhite"
        android:layout_margin="@dimen/screenNormalMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/normalTextSize"
        android:textStyle="bold"
        android:id="@+id/tvDrugName"
        android:transitionName="android"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15:25"
        android:textColor="@color/colorSoftWhite"
        android:layout_margin="@dimen/screenNormalMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/normalTextSize"
        android:textStyle="bold"
        android:transitionName="android1"
        android:id="@+id/tvTime"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/tvDrugName"
        app:layout_constraintBottom_toBottomOf="@+id/tvDrugName"
        app:layout_constraintStart_toStartOf="@+id/tvDrugName"
        app:layout_constraintEnd_toEndOf="@+id/tvDrugName"
        android:background="?attr/colorLightText"
        android:id="@+id/vTokeIt"
        android:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>