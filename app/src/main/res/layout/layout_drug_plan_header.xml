<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorMyPrimary"
    android:paddingStart="@dimen/screenNormalMargin"
    android:paddingEnd="@dimen/screenNormalMargin"
    android:paddingTop="@dimen/screenNormalMargin"
    android:paddingBottom="@dimen/screenNormalMargin">

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="?attr/colorStyleAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/leftShape"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/colorDarkText"/>
    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="?attr/colorStyleAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rightShape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="چهارشنبه 24\nاسفند"
        android:textColor="?attr/colorDarkText"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        android:paddingStart="@dimen/screenSmallMargin"
        android:paddingEnd="@dimen/screenSmallMargin"
        android:id="@+id/tvDay"/>
</androidx.constraintlayout.widget.ConstraintLayout>